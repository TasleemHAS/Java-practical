class Inherit1 {
    protected int[] numbers;

    public Inherit1(int size) {
        numbers = new int[size];
    }

    public void setNumbers(int index, int value) {
        if (index >= 0 && index < numbers.length) {
            numbers[index] = value;
        }
    }
}

class Inher2 extends Inherit1 {
    public Inher2(int size) {
        super(size);
    }

    public void memik() {
        int sum = 0;
        int max = numbers[0];

        System.out.print("Numbers: ");
        for (int number : numbers) {
            System.out.print(number + " ");
            sum += number;
            if (number > max) {
                max = number;
            }
        }
        double average = (double) sum / numbers.length;

        System.out.println("\nSum of numbers: " + sum);
        System.out.println("Average of numbers: " + average);
        System.out.println("Maximum of numbers: " + max);
    }
}

class Main {
    public static void main(String[] args) {
        Inher2 inher = new Inher2(5);
        inher.setNumbers(0, 10);
        inher.setNumbers(1, 20);
        inher.setNumbers(2, 30);
        inher.setNumbers(3, 40);
        inher.setNumbers(4, 50);

        inher.memik();
    }
}

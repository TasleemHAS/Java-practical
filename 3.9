import java.util.Arrays;
import java.util.Collections;

public class ArrayOperations
{
    private int[] array;

    public ArrayOperations(int size)
    {
        array = new int[size];
    }

    public void initializeArray()
    {
        for (int i = 0; i < array.length; i++) 
        {
            array[i] = (int) (Math.random() * 100);
        }
    }

    public int findLargest() 
    {
        int largest = array[0];
        for (int num : array) 
        {
            if (num > largest)
            {
                largest = num;
            }
        }
        return largest;
    }

    public int findSmallest() 
    {
        int smallest = array[0];
        for (int num : array)
        {
            if (num < smallest)
            {
                smallest = num;
            }
        }
        return smallest;
    }

    public void displayArray() 
    {
        for (int num : array) 
        {
            System.out.println(num);
        }
    }

    public void displaySortedArray() 
    {
        Integer[] sortedArray = Arrays.stream(array).boxed().toArray(Integer[]::new);
        Arrays.sort(sortedArray, Collections.reverseOrder());
        System.out.println("Sorted Array from Largest to Smallest:");
        for (int num : sortedArray) 
        {
            System.out.println(num);
        }
    }

    public static void main(String[] args) 
    {
        ArrayOperations operations = new ArrayOperations(10);
        operations.initializeArray();
        operations.displayArray();
        System.out.println("Largest: " + operations.findLargest());
        System.out.println("Smallest: " + operations.findSmallest());
        operations.displaySortedArray();
    }
}
